<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent" >

    <LinearLayout android:id="@+id/vertical_anchor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        ></LinearLayout>

    <com.example.ollamh.proj1.GifView
        android:id="@+id/gef_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></com.example.ollamh.proj1.GifView>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/transparent1"
        android:alpha=".30"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/transparent2"
        android:alpha=".15"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/transparent3"
        android:alpha=".15"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/transparent4"
        android:alpha=".15"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:text="Date"
        android:textSize="16pt"
        android:layout_below="@+id/location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#cdd4db"
        android:shadowColor="@android:color/background_dark"
        android:shadowDx="-2"
        android:shadowDy="2"
        android:shadowRadius=".1"/>

    <TextView android:id="@+id/location"
        android:text="City, ST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20pt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#cdd4db"
        android:shadowColor="@android:color/background_dark"
        android:shadowDx="-2"
        android:shadowDy="2"
        android:shadowRadius=".1"/>
    <TextView android:id="@+id/temperature"
        android:text="90Â°"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#cdd4db"
        android:textSize="30pt"
        android:shadowColor="@android:color/background_dark"
        android:shadowDx="-2"
        android:shadowDy="2"
        android:shadowRadius=".1"
        android:layout_below="@+id/vertical_anchor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView android:id="@+id/humidity"
        android:text="Humidity +-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#cdd4db"
        android:layout_above="@+id/vertical_anchor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="47dp"
        android:shadowColor="@android:color/background_dark"
        android:shadowDx="-2"
        android:shadowDy="2"
        android:shadowRadius=".1"/>

    <TextView android:id="@+id/realfeel"
        android:text="Real Feel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#cdd4db"
        android:shadowColor="@android:color/background_dark"
        android:shadowDx="-2"
        android:shadowDy="2"
        android:shadowRadius=".1"
        android:layout_alignTop="@+id/temperature"
        android:layout_alignLeft="@+id/humidity"
        android:layout_alignStart="@+id/humidity" />
     <TextView android:id="@+id/dewpoint"
         android:text="Dew Point"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="#cdd4db"
         android:layout_below="@+id/temperature"
         android:layout_alignLeft="@+id/realfeel"
         android:layout_alignStart="@+id/realfeel"
         android:shadowColor="@android:color/background_dark"
         android:shadowDx="-2"
         android:shadowDy="2"
         android:shadowRadius=".1"/>

</RelativeLayout>
